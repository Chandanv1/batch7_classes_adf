{
	"name": "dataflow2",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DelimitedText11",
						"type": "DatasetReference"
					},
					"name": "source1"
				},
				{
					"dataset": {
						"referenceName": "DelimitedText12",
						"type": "DatasetReference"
					},
					"name": "source2"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "assert1"
				},
				{
					"name": "filter1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          Sales_ID as string,",
				"          SO_Date as string,",
				"          CustID as string,",
				"          Qty as string,",
				"          Value as string,",
				"          Country as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> source1",
				"source(output(",
				"          CustomerID as string,",
				"          CustomerName as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> source2",
				"source1, source2 assert(expectUnique(Sales_ID, false, 'SalesID'),",
				"     expectTrue(!isNull(toDate(SO_Date,'MM/dd/yyyy')), false, 'SalesDate'),",
				"     expectExists(CustID == CustomerID, false, 'Customer_ID')) ~> assert1",
				"assert1 filter(isError()==true()) ~> filter1"
			]
		}
	}
}